    <style name="HhyunLibUpAlert" parent="@style/HhyunLibFillAlert" >
        <item name="android:windowAnimationStyle">@style/InterLibUpAlertAnimation</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="HhyunLibUpTransparentAlert" parent="@style/HhyunLibUpAlert" >
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="InterLibUpAlertAnimation" >
        <item name="android:windowEnterAnimation">@anim/hhyunlib_slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/hhyunlib_slide_out_down</item>
    </style>

</resources>